<div class="btn-group pull-right actions">
<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-align-justify"></i> Meer
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "Nieuwe school", new_school_path %></li>
    <li><%= link_to "Nieuwe klas", new_kla_path %></li>
  </ul>
</div>
<h1>Scholen</h1>

<table class="table">
  <tr>
    <th>Naam</th>
    <th>Aantal klassen</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tr class="school_header">
    <td>DILBEEKS</td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr> 
<% @dilbeekse_scholen.each do |school| %>
  <tr>
    <td><%= school.name %></td>
    <td><%= school.klas.count%></td>
    <td><%= link_to 'Toon', school, class: "btn btn-small" %></td>
    <td><%= link_to 'Wijzig', edit_school_path(school), class: "btn btn-small" %></td>
    <% if school.klas.count == 0 %>
        <td><%= link_to 'Verwijder', school, confirm: 'Bent u zeker?', method: :delete, class: "btn btn-small btn-danger" %></td>
    <% else %>
        <td></td>
    <% end %>
  </tr>
<% end %>
  <tr class="school_header">
    <td>NIET-DILBEEKS</td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr> 
  <% @niet_dilbeekse_scholen.each do |school| %>
  <tr>
    <td><%= school.name %></td>
    <td><%= school.klas.count%></td>
    <td><%= link_to 'Toon', school, class: "btn btn-small" %></td>
    <td><%= link_to 'Wijzig', edit_school_path(school), class: "btn btn-small" %></td>
  </tr>
<% end %>
</table>

